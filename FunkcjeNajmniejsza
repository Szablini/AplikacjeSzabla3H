    <script>
    function najmniejsza(x,y,z)
    {
        if (x<y && x<z)
        {
            alert("Najmniejszą liczbą jest: " + x);
        }
        else if (y<x && y<z)
        {
            alert("Najmniejszą liczbą jest: " + y);
        }
        else if (z<x && z<y)
        {
           alert("Najmniejszą liczbą jest: " + z);
        }
    }

najmniejsza (3,4,6);

</script>
